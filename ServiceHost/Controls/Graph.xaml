<UserControl x:Class="ServiceHost.Controls.Graph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServiceHost.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="170" d:DesignWidth="300" Loaded="UserControl_Loaded" Background="{StaticResource Background}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>
        <Border Background="#252525" Grid.Column="0" >
            <Canvas  Name="GraphCanvas" MinWidth="170" MinHeight="170" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            
        </Border>

        <Border Margin="5" Grid.Column="1" CornerRadius="2" BorderBrush="#202020" Background="#303030">
        <StackPanel >
            <TextBlock Text="MB"></TextBlock>
            <TextBox Margin="5"></TextBox>
        </StackPanel>
            
        </Border>
    </Grid>
</UserControl>
